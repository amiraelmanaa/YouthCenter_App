    /* Centers Showcase Styles */
    .centers-showcase {
        padding: 5rem 0;
        background: #ffffff;
        border-top: 1px solid rgba(0, 0, 0, 0.05);
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }
    
    .section-subtitle {
        text-align: center;
        color: #717171;
        margin-bottom: 3rem;
        font-size: 1.25rem;
    }
    
    .centers-container {
        position: relative;
        max-width: 100%;
        overflow: hidden;
        padding: 1rem 0;
    }
    
    .centers-grid {
        display: flex;
        gap: 1.5rem;
        overflow-x: auto;
        scroll-snap-type: x mandatory;
        padding: 1rem 0;
        scrollbar-width: none; /* Firefox */
        -ms-overflow-style: none; /* IE/Edge */
    }
    
    .centers-grid::-webkit-scrollbar {
        display: none; /* Chrome/Safari */
    }
    
    .center-card {
        flex: 0 0 300px;
        scroll-snap-align: start;
        transition: all 0.3s ease;
    }
    
    .center-card:hover {
        transform: translateY(-5px);
    }
    
    .center-image {
        position: relative;
        height: 350px;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
    
    .center-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }
    
    .center-card:hover .center-image img {
        transform: scale(1.05);
    }
    
    .center-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(to top, rgba(67, 0, 255, 0.9), transparent);
        color: white;
        padding: 2rem 1.5rem 1.5rem;
        opacity: 0;
        transition: opacity 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
    }
    
    .center-card:hover .center-overlay {
        opacity: 1;
    }
    
    .center-overlay h3 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }
    
    .center-overlay p {
        font-size: 0.9rem;
        margin-bottom: 1rem;
        line-height: 1.5;
    }
    
    .center-btn {
        display: inline-block;
        background: white;
        color: #4300FF;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        align-self: flex-start;
    }
    
    .center-btn:hover {
        background: #f0f0f0;
        transform: translateY(-2px);
    }
    
    .centers-navigation {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 2rem;
    }
    
    .nav-arrow {
        background: #4300FF;
        color: white;
        border: none;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        font-size: 1.5rem;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .nav-arrow:hover {
        background: #3a00d6;
        transform: scale(1.1);
    }
    
    .view-all-btn {
        background: transparent;
        color: #4300FF;
        padding: 0.5rem 1.5rem;
        border: 2px solid #4300FF;
        border-radius: 25px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .view-all-btn:hover {
        background: #4300FF;
        color: white;
        transform: translateY(-2px);
    }
    
    @media (max-width: 768px) {
        .center-card {
            flex: 0 0 85%;
        }
        
        .centers-navigation {
            justify-content: center;
            gap: 1rem;
        }
        
        .nav-arrow {
            width: 35px;
            height: 35px;
            font-size: 1.2rem;
        }
    }



        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
