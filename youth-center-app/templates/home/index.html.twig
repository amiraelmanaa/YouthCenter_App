            align-items: center;
            font-size: 1.5rem;
            font-weight: 700;
            color: #4300FF
            text-decoration: none;
        }

        .logo-icon {
            width: 55px;
            height: 32px;
            margin-right: 0.5rem;
            background: linear-gradient(135deg,rgb(90, 107, 255),rgb(70, 68, 236));
