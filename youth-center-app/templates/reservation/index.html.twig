    <div class="container">
        <!-- Booking Form -->
        <div class="booking-card">
            <div class="booking-header">
                <h2><i class="fas fa-calendar-check"></i> Check Availability</h2>
                <p>Find your perfect stay in our youth center</p>
            </div>
            
            <div class="booking-form">
                <form id="search-form" method="POST">
    <input type="hidden" name="search" value="1">
                    <div class="form-grid">
                        <div class="form-group">
                            <label for="start_date">
                                <i class="fas fa-calendar-alt"></i>
                                Check-in Date
                            </label>
                            <input type="date" id="start_date" name="start_date" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="end_date">
                                <i class="fas fa-calendar-alt"></i>
                                Check-out Date
                            </label>
                            <input type="date" id="end_date" name="end_date" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="guests">
                                <i class="fas fa-users"></i>
                                Number of Guests
                            </label>
                            <input type="number" id="guests" name="guests" min="1" required placeholder="1" value="1">
                        </div>
                        
                        <div class="form-group">
                            <div class="checkbox-group">
                                <input type="checkbox" id="is_group" name="is_group">
                                <label for="is_group">
                                    <i class="fas fa-user-friends"></i>
                                    Group Booking
                                </label>
                            </div>
                        </div>
                    </div>
                    
                    <button type="submit" class="search-btn">
                        <i class="fas fa-search"></i>
                        Search Available Rooms
                    </button>
                </form>
            </div>
        </div>

        <!-- Results Section -->
        <div id="results-section" style="display: none;">
            <div class="booking-card">
                <div class="rooms-section">
                    <h3 class="section-title">
                        <i class="fas fa-bed"></i>
                        Available Rooms
                    </h3>
                    
                    <div class="rooms-grid" id="rooms-grid">
                        <!-- Rooms will be populated here -->
                    </div>
                </div>
            </div>
        </div>

        <!-- No rooms message -->
        <div id="no-rooms-section" style="display: none;">
            <div class="booking-card">
                <div class="no-rooms">
                    <i class="fas fa-bed"></i>
                    <h3>No Available Rooms</h3>
                    <p>Sorry, no rooms match your search criteria. Please try different dates or reduce the number of guests.</p>
                </div>
            </div>
        </div>
    </div>
    
<script>
    // Get centerId from Twig
const centerId = {{ centerId }};

// Set minimum dates
const today = new Date().toISOString().split('T')[0];
document.getElementById('start_date').min = today;
document.getElementById('end_date').min = today;

// Date validation
document.getElementById('start_date').addEventListener('change', function() {
    document.getElementById('end_date').min = this.value;
});

// Handle form submission - AJAX to collect info to filter 
document.getElementById('search-form').addEventListener('submit', function(e) {
    e.preventDefault();

    const startDate = document.getElementById('start_date').value;
    const endDate = document.getElementById('end_date').value;
    const guests = document.getElementById('guests').value;
    const isGroup = document.getElementById('is_group').checked ? 1 : 0;
    

    // Simple validation
    if (!startDate || !endDate || !guests) {
        alert('Please fill in all required fields');
        return;
    }

    if (new Date(startDate) >= new Date(endDate)) {
        alert('Check-out date must be after check-in date');
        return;
    }

    // Fixed URL to include centerId
    fetch(`/reservation/${centerId}?start_date=${startDate}&end_date=${endDate}&guests=${guests}&is_group=${isGroup}`, {
        headers: {
            'X-Requested-With': 'XMLHttpRequest',
            'Accept': 'application/json'
        }
    })
    .then(res => {
        if (!res.ok) {
            throw new Error(`HTTP error! status: ${res.status}`);
        }
        return res.json();
    })
    .then(data => {
        console.log('Received rooms:', data);
        displayRooms(data, startDate, endDate, guests);
    })
    .catch(err => {
        console.error('Error fetching rooms:', err);
        alert('Error searching for rooms. Please try again.');
    });
});

function displayRooms(rooms, startDate, endDate, guests) {
    const resultsSection = document.getElementById('results-section');
    const noRoomsSection = document.getElementById('no-rooms-section');
    const roomsGrid = document.getElementById('rooms-grid');

    if (rooms.length === 0) {
        resultsSection.style.display = 'none';
        noRoomsSection.style.display = 'block';
        return;
    }

    noRoomsSection.style.display = 'none';
    resultsSection.style.display = 'block';

    roomsGrid.innerHTML = rooms.map(room => `
        <div class="room-card">
            <div class="room-header">
                <div class="room-details">
                    <div class="room-detail">
                        <i class="fas fa-users"></i>
                        <span>${room.capacity} Guests</span>
                    </div>
                    <div class="room-detail">
                        <span class="price-tag">€${room.pricePerNight}/night</span>
                    </div>
                    <div class="room-detail">
                        <i class="fas fa-tag"></i>
                        <span class="type-badge">
                            ${room.isGroupOnly ? 'Group Only' : 'Individual or Group'}
                        </span>
                    </div>
                </div>
            </div>
            
            <div class="room-body">
                <div class="calendar-container" id="calendar-${room.id}">
                    <i class="fas fa-calendar-check"></i>
                    Available for selected dates
                </div>
                
                <button class="book-btn" onclick="showReservationForm(${room.id}, '${startDate}', '${endDate}', ${guests})">
                    <i class="fas fa-check-circle"></i>
                    Book This Room
                </button>

                <div class="reservation-form" id="reservation-form-${room.id}">
                    <h4>
                        <i class="fas fa-user-edit"></i>
                        Reservation Details
                    </h4>
                    <form id="reservation-${room.id}">
                        <div class="reservation-grid">
                            <div class="form-group">
                                <label for="first-name-${room.id}">
                                    <i class="fas fa-user"></i>
                                    First Name
                                </label>
                                <input type="text" id="first-name-${room.id}" name="first_name" required>
                            </div>
                            <div class="form-group">
                                <label for="last-name-${room.id}">
                                    <i class="fas fa-user"></i>
                                    Last Name
                                </label>
                                <input type="text" id="last-name-${room.id}" name="last_name" required>
                            </div>
                            <div class="form-group">
                                <label for="age-${room.id}">
                                    <i class="fas fa-birthday-cake"></i>
                                    Age
                                </label>
                                <input type="number" id="age-${room.id}" name="age" min="1" max="120" required>
                            </div>
                            <div class="form-group">
                                <label for="email-${room.id}">
                                    <i class="fas fa-envelope"></i>
                                    Email
                                </label>
                                <input type="email" id="email-${room.id}" name="email" required>
                            </div>
                        </div>
                        <div>
                            <button type="submit" class="reserve-btn">
                                <i class="fas fa-bookmark"></i>
                                Reserve Room
                            </button>
                            <button type="button" class="cancel-btn" onclick="hideReservationForm(${room.id})">
                                <i class="fas fa-times"></i>
                                Cancel
                            </button>
                        </div>
                    </form>
                    <div class="success-message" id="success-${room.id}">
                        <i class="fas fa-check-circle"></i>
                        Reservation successful! Go to My Bookings to proceed to payment step.
                    </div>
                </div>
            </div>
        </div>
    `).join('');

    // Add event listeners for reservation forms
    rooms.forEach(room => {
        document.getElementById(`reservation-${room.id}`).addEventListener('submit', function(e) {
            e.preventDefault();
            handleReservation(room.id);
        });
    });

    // Scroll to results
    setTimeout(() => {
        resultsSection.scrollIntoView({ behavior: 'smooth' });
    }, 100);
}

function showReservationForm(roomId, startDate, endDate, guests) {
    const isLoggedIn = {{ app.user ? 'true' : 'false' }};
    
    if (!isLoggedIn) {
        alert("You must be logged in to make a reservation.");
        window.location.href = "{{ path('app_login') }}";
        return;
    }
    
    const form = document.getElementById(`reservation-form-${roomId}`);
    form.classList.add('show');
    
    // Hide the book button
    event.target.style.display = 'none';
}

function hideReservationForm(roomId) {
    const form = document.getElementById(`reservation-form-${roomId}`);
    form.classList.remove('show');
    
    // Show the book button again
    const bookBtn = form.parentElement.querySelector('.book-btn');
    bookBtn.style.display = 'block';
    
    // Clear form
    document.getElementById(`reservation-${roomId}`).reset();
    
    // Hide success message
    document.getElementById(`success-${roomId}`).classList.remove('show');
}

function handleReservation(roomId) {
    const form = document.getElementById(`reservation-${roomId}`);
    const firstName = document.getElementById(`first-name-${roomId}`).value;
    const lastName = document.getElementById(`last-name-${roomId}`).value;
    const age = document.getElementById(`age-${roomId}`).value;
    const email = document.getElementById(`email-${roomId}`).value;

    // Simple validation
    if (!firstName || !lastName || !age || !email) {
        alert('Please fill in all fields');
        return;
    }

    const payload = {
        room_id: roomId,
        start_date: document.getElementById('start_date').value,
        end_date: document.getElementById('end_date').value,
        guests: parseInt(document.getElementById('guests').value),
        is_group: document.getElementById('is_group').checked,
        first_name: firstName,
        last_name: lastName,
        age: parseInt(age),
        email: email,
    };

    fetch('/booking', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        },
        body: JSON.stringify(payload)
    })
    .then(res => res.json())
    .then(data => {
        if (data.success) {
            document.getElementById(`success-${roomId}`).classList.add('show');
            form.reset();

            setTimeout(() => {
                hideReservationForm(roomId);
            }, 3000);
        } else {
            alert('Booking failed: ' + (data.error || 'Unknown error'));
        }
    })
    .catch(err => {
        console.error('Booking error:', err);
        alert('An error occurred while saving your reservation.');
    });
}
</script>
