{# templates/admin/dashboard.html.twig #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <div class="container my-5">
        <h1 class="mb-4">👋 Welcome to <strong>Youth Center Admin</strong></h1>

        <div class="alert alert-info">
            Use the sidebar to manage your entities such as <strong>Centers</strong>, <strong>Users</strong>, and more.
        </div>

        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">📍 Manage Centers</h5>
                        <p class="card-text">Add or edit youth center locations and details.</p>
                        <a href="{{ center_crud_url }}" class="btn btn-primary">Go to Centers</a>
                    </div>
                </div>
            </div>

          
            
            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">👥 Manage Users</h5>
                        <p class="card-text">View or update user accounts and roles.</p>
                       <a href="{{ user_crud_url }}" class="btn btn-primary">Go to Users</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title"> Manage Activities</h5>
                        <p class="card-text">View or update activities in each center.</p>
                       <a href="{{ activities_crud_url }}" class="btn btn-primary">Go to Activities</a>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
{% endblock %}
