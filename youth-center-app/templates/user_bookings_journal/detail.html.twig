{% block body %}
    <!-- Animated Background -->
    <div class="animated-bg">
        <div class="floating-shape">🏢</div>
        <div class="floating-shape">✨</div>
        <div class="floating-shape">🌟</div>
        <div class="floating-shape">💫</div>
    </div>

 <!-- Navigation -->
    <nav class="navbar" id="navbar">
        <div class="nav-container">
            <a href="#" class="logo">
                <div class="logo-icon">YC</div>
                YouthConnect
            </a>
            <ul class="nav-menu" id="nav-menu">
                <li><a href="{{ path('home') }}"  class="nav-link">Home</a></li>
                <li>
                {% if app.user %}
                    <a href="{{ path('app_user_bookings_journal') }}" class="nav-link">My Bookings</a>
                {% else %}
                    <a href="#" 
                       class="nav-link" 
                       onclick="alert('Please log in first to access your bookings.'); return false;">
                        My Bookings
                    </a>
                {% endif %}
            </li>
                <li>
                {% if app.user %}
                 <a href="{{ path('app_logout') }}" class="login-btn">Logout</a>
                 {% else %}
                  <a href="{{ path('app_register') }}" class="login-btn">Login</a>
                  {% endif %}
                </li>
            </ul>
            <button class="mobile-menu-toggle" id="mobile-menu-toggle">☰</button>
        </div>
    </nav>

    <!-- Enhanced Header Section -->
    <div class="detail-header">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <a href="{{ path('app_user_bookings_journal') }}" class="back-button">
                        ← Back to My Reservations
                    </a>
                    <h1 class="detail-title">Booking #{{ booking.id }}</h1>
                    <p class="detail-subtitle">Complete details of your youth center reservation</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="detail-content">
            <!-- Main Content -->
            <div class="main-card">
                <div class="card-header">
                    <h2 class="room-name">
                        {% if booking.room %}
                            {{ booking.room.name ?? 'Space #' ~ booking.room.id }}
                        {% else %}
                            Space Information Unavailable
                        {% endif %}
                    </h2>
                    
                    <div class="booking-timeline">
                        <div class="timeline-item">
                            <div class="timeline-date">{{ booking.startDate|date('M d, Y') }}</div>
                            <div class="timeline-label">Check-in</div>
                        </div>
                        <div class="timeline-arrow">→</div>
                        <div class="timeline-item">
                            <div class="timeline-date">{{ booking.endDate|date('M d, Y') }}</div>
                            <div class="timeline-label">Check-out</div>
                        </div>
                        <div class="nights-badge">
                            {{ booking.calculateNights(booking.startDate, booking.endDate) }} nights
                        </div>
                    </div>
                </div>
                
                <div class="card-body">
                    <div class="details-grid">
                        <!-- Booking Information -->
                        <div class="detail-section">
                            <h3 class="section-title">
                                📋 Booking Information
                            </h3>
                            <div class="detail-row">
                                <span class="detail-label">Booking ID</span>
                                <span class="detail-value">#{{ booking.id }}</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Number of Participants</span>
                                <span class="detail-value">{{ booking.guestsCount ?? 1 }}</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Group Booking</span>
                                <span class="detail-value">{{ booking.isGroupBooking ? 'Yes' : 'No' }}</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Participant Age</span>
                                <span class="detail-value">{{ booking.age }} years</span>
                            </div>
                        </div>

                        <!-- Space Details -->
                        <div class="detail-section">
                            <h3 class="section-title">
                                🏢 Space Details
                            </h3>
                            {% if booking.room %}
                                <div class="detail-row">
                                    <span class="detail-label">Center Name</span>
                                    <span class="detail-value">{{ booking.room.center ?? 'TBD' }}</span>
                                </div>
                                <div class="detail-row">
                                    <span class="detail-label">Contact    </span>
                                    <span class="detail-value">{{ booking.room.center.email?? 'Multi-purpose' }}</span>
                                </div>
                                <div class="detail-row">
                                    <span class="detail-label">Floor</span>
                                    <span class="detail-value">{{ booking.room.floor ?? 'TBD' }}</span>
                                </div>
                            {% else %}
                                <div class="detail-row">
                                    <span class="detail-label">Status</span>
                                    <span class="detail-value">Space assignment pending</span>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Guest Information -->
                    <div class="guest-info">
                        <div class="guest-avatar">
                            {{ booking.guestName|first|upper }}{{ booking.guestLastName|first|upper }}
                        </div>
                        <div class="guest-name">
                            {{ booking.guestName }} {{ booking.guestLastName }}
                        </div>
                        <div class="guest-email">
                            {{ booking.email }}
                        </div>
                    </div>

                    <!-- Booking Notes -->
                    {% set currentDate = date() %}
                    {% if booking.startDate > currentDate %}
                        <div class="booking-notes">
                            <div class="notes-title">
                                💡 Important Information
                            </div>
                            <div class="notes-text">
                                Your youth center reservation is confirmed! Please arrive at the center after the scheduled time on your booking date. 
                                Early access may be available upon request. Don't forget to bring a valid ID and any required materials for your activities.
                            </div>
                        </div>
                    {% elseif booking.startDate <= currentDate and booking.endDate >= currentDate %}
                        <div class="booking-notes">
                            <div class="notes-title">
                                🎉 Currently Active
                            </div>
                            <div class="notes-text">
                                Welcome! Your booking is currently active. Make the most of your time at the youth center. 
                                Your session ends on {{ booking.endDate|date('M d, Y') }}. Extended time may be available upon request at the front desk.
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Enhanced Sidebar -->
            <div class="sidebar-card">
                <!-- Price Summary -->
                <div class="price-summary">
                    <div class="total-price">${{ booking.totalPrice|number_format(2) }}</div>
                    <div class="price-label">Total Amount</div>
                </div>

                <!-- Status -->
                <div class="status-section">
                    <div class="status-badge status-{{ booking.status|lower }}">
                        {{ booking.status }}
                    </div>
                    {% if booking.status|lower == 'confirmed' %}
                        <p style="color: var(--success-color); font-size: 1rem; font-weight: 600;">
                            ✅ Your booking is confirmed and ready!
                        </p>
                    {% elseif booking.status|lower == 'pending' %}
                        <p style="color: var(--warning-color); font-size: 1rem; font-weight: 600;">
                            ⏳ Your booking is being processed.
                        </p>
                    {% elseif booking.status|lower == 'cancelled' %}
                        <p style="color: var(--danger-color); font-size: 1rem; font-weight: 600;">
                            ❌ This booking has been cancelled.
                        </p>
                    {% elseif booking.status|lower == 'completed' %}
                        <p style="color: var(--primary-color); font-size: 1rem; font-weight: 600;">
                            🎉 Thank you for using our youth center!
                        </p>
                    {% endif %}
                </div>

                <!-- Action Buttons -->
                
                <div class="action-buttons">
                {% if booking.status|lower in ['accepted', 'Accepted'] %}
                 <a href="{{ path('payment_booking', { id: booking.id }) }}" class="btn btn-primary">
                        Pay now and confirm your Booking
                    </a>
                     {% endif %}

                    <a href="{{ path('app_user_bookings_journal') }}" class="btn btn-primary">
                        Back to All Bookings
                    </a>
                    
                    {% if booking.status|lower in ['confirmed', 'accepted'] %}
                        <a href="#" class="btn btn-outline" onclick="window.print(); return false;">
                            Print Confirmation
                        </a>
                    {% endif %}
                </div>

                <!-- Enhanced Contact Information -->
                <div class="contact-info">
                    <h4>Need Help?</h4>
                    <p>📞 Youth Center: (555) 123-4567</p>
                    <p>✉️ Email: support@youthconnect.org</p>
                    <p>💬 WhatsApp: +1 (555) 987-6543</p>
                    <p>🕒 Available 24/7</p>
                    <p>🌐 Visit: youthconnect.org/help</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Enhanced animations and interactions
        document.addEventListener('DOMContentLoaded', () => {
            // Stagger animation for main elements
            const mainElements = [
                '.main-card',
                '.sidebar-card'
            ];
            
            mainElements.forEach((selector, index) => {
                const element = document.querySelector(selector);
                if (element) {
                    element.style.opacity = '0';
                    element.style.transform = 'translateY(50px)';
                    element.style.transition = `all 0.8s cubic-bezier(0.4, 0, 0.2, 1) ${index * 0.2}s`;
                    
                    setTimeout(() => {
                        element.style.opacity = '1';
                        element.style.transform = 'translateY(0)';
                    }, 200);
                }
            });

            // Animate detail sections on scroll
            const observerOptions = {
                threshold: 0.2,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0) scale(1)';
                    }
                });
            }, observerOptions);

            // Observe detail sections
            const detailSections = document.querySelectorAll('.detail-section');
            detailSections.forEach((section, index) => {
                section.style.opacity = '0';
                section.style.transform = 'translateY(30px) scale(0.95)';
                section.style.transition = `all 0.6s cubic-bezier(0.4, 0, 0.2, 1) ${index * 0.1}s`;
                observer.observe(section);
            });

            // Add hover effects to interactive elements
            const interactiveElements = document.querySelectorAll('.timeline-item, .detail-row, .guest-info');
            interactiveElements.forEach(element => {
                element.addEventListener('mouseenter', () => {
                    element.style.transform = 'translateY(-3px)';
                });
                
                element.addEventListener('mouseleave', () => {
                    element.style.transform = 'translateY(0)';
                });
            });

            // Smooth navbar scroll effect
            let lastScrollY = window.scrollY;
            const navbar = document.querySelector('.navbar');
            
            window.addEventListener('scroll', () => {
                const currentScrollY = window.scrollY;
                
                if (currentScrollY > lastScrollY && currentScrollY > 100) {
                    navbar.style.transform = 'translateY(-100%)';
                } else {
                    navbar.style.transform = 'translateY(0)';
                }
                lastScrollY = currentScrollY;
            });

            // Add ripple effect to buttons
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach(button => {
                button.addEventListener('click', function(e) {
                    const ripple = document.createElement('span');
                    const rect = this.getBoundingClientRect();
                    const size = Math.max(rect.width, rect.height);
                    const x = e.clientX - rect.left - size / 2;
                    const y = e.clientY - rect.top - size / 2;
                    
                    ripple.style.cssText = `
                        position: absolute;
                        border-radius: 50%;
                        background: rgba(255, 255, 255, 0.6);
                        transform: scale(0);
                        animation: ripple-animation 0.6s linear;
                        pointer-events: none;
                        width: ${size}px;
                        height: ${size}px;
                        left: ${x}px;
                        top: ${y}px;
                    `;
                    
                    this.appendChild(ripple);
                    
                    setTimeout(() => {
                        ripple.remove();
                    }, 600);
                });
            });

            // Add parallax effect to hero section
            window.addEventListener('scroll', () => {
                const scrolled = window.pageYOffset;
                const heroSection = document.querySelector('.detail-header');
                if (heroSection) {
                    heroSection.style.transform = `translateY(${scrolled * 0.3}px)`;
                }
            });

            // Animate status badge on load
            const statusBadge = document.querySelector('.status-badge');
            if (statusBadge) {
                setTimeout(() => {
                    statusBadge.style.transform = 'scale(1.1)';
                    setTimeout(() => {
                        statusBadge.style.transform = 'scale(1)';
                    }, 200);
                }, 1000);
            }

            
            const roomName = document.querySelector('.room-name');
            if (roomName) {
                const text = roomName.textContent;
                roomName.textContent = '';
                let i = 0;
                
                const typeWriter = () => {
                    if (i < text.length) {
                        roomName.textContent += text.charAt(i);
                        i++;
                        setTimeout(typeWriter, 50);
                    }
                };
                
                setTimeout(typeWriter, 800);
            }

            // Enhanced floating shapes interaction
            const shapes = document.querySelectorAll('.floating-shape');
            shapes.forEach(shape => {
                shape.addEventListener('mouseenter', () => {
                    shape.style.animation = 'none';
                    shape.style.transform = 'scale(1.5) rotate(45deg)';
                    shape.style.opacity = '0.3';
                });
                
                shape.addEventListener('mouseleave', () => {
                    shape.style.animation = 'float 20s infinite ease-in-out';
                    shape.style.opacity = '0.08';
                });
            });

            // Add smooth transitions to contact info items
            const contactItems = document.querySelectorAll('.contact-info p');
            contactItems.forEach((item, index) => {
                item.style.opacity = '0';
                item.style.transform = 'translateX(-20px)';
                item.style.transition = `all 0.5s ease ${index * 0.1}s`;
                
                setTimeout(() => {
                    item.style.opacity = '1';
                    item.style.transform = 'translateX(0)';
                }, 1500 + (index * 100));
            });

        
            const style = document.createElement('style');
            style.textContent = `
                @keyframes ripple-animation {
                    to {
                        transform: scale(4);
                        opacity: 0;
                    }
                }
                
                .btn {
                    position: relative;
                    overflow: hidden;
                }
                
                /* Enhanced hover effects */
                .detail-section:hover .section-title {
                    color: var(--primary-color);
                    transform: translateX(5px);
                }
                
                .guest-avatar:hover {
                    transform: rotate(360deg) scale(1.1);
                    transition: all 0.8s ease;
                }
                
                .nights-badge:hover {
                    animation: none;
                    transform: scale(1.1) rotate(5deg);
                }
            `;
            document.head.appendChild(style);
        });
    </script>
{% endblock %}